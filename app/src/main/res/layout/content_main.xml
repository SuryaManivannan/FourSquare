<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.test.foursquare.MainActivity">

    <Button
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/num1"
        android:contextClickable="false"
        android:clickable="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="35dp"
        android:layout_above="@+id/num3"
        android:layout_toStartOf="@+id/num4" />

    <Button
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/num2"
        android:clickable="true"
        android:layout_above="@+id/num4"
        android:layout_alignStart="@+id/num4" />

    <Button
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/num3"
        android:clickable="true"
        android:layout_marginLeft="45dp"
        android:layout_alignTop="@+id/num4"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/num4"
        android:clickable="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/target" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Operation"
        android:textSize="30dp"
        android:textAlignment="textStart"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/operation" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="180dp"
        android:text="TargetValue"
        android:id="@+id/target" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/right"
        android:background="#1fdf12"
        android:text="0"
        android:textSize="125dp"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/num1"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="100dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/wrong"
        android:textAlignment="center"
        android:background="#e20b20"
        android:text="0"
        android:textSize="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/num2" />

</RelativeLayout>
